# .env.example - Example environment variables for Research Compass
# Copy this file to `.env` and fill in any secret values. Do NOT commit
# your real `.env` with credentials or API keys.

# Gradio server settings
GRADIO_SERVER_PORT=7860
GRADIO_PREFERRED_PORT=7860

# Neo4j (graph) settings
# If you run Neo4j locally, use the bolt URI and credentials below.
NEO4J_URI=bolt://127.0.0.1:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

# Embedding model to use (sentence-transformers)
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Optional GNN settings (if you enable GNN features)
ENABLE_GNN=false
GNN_URI=bolt://127.0.0.1:7687
GNN_USER=neo4j
GNN_PASSWORD=changeme

# General
ENV=development
LOG_LEVEL=INFO

# OpenAI or other LLM API key (if used)
OPENAI_API_KEY=

# Local vector DB / Chroma directory (if used)
CHROMA_DIR=./data/chroma

# Note: after copying to .env, set NEO4J_PASSWORD and GNN_PASSWORD to secure
# values and keep .env out of version control.
# GraphRAG Enhanced Edition - Environment Configuration
# Copy this file to .env and update with your settings

# ============================================================================
# Neo4j Database Configuration
# ============================================================================
NEO4J_URI=neo4j://127.0.0.1:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# ============================================================================
# LLM Configuration
# ============================================================================

# Ollama (Local) - Recommended for privacy
USE_OLLAMA=True
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.2

# OpenAI (Cloud) - Alternative
USE_OPENAI=False
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# Embedding Model Configuration
# ============================================================================
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# ============================================================================
# Document Processing Configuration
# ============================================================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_CHUNKS=5
MAX_GRAPH_DEPTH=3

# ============================================================================
# Path Configuration
# ============================================================================
DATA_DIR=graphrag_data
OUTPUT_DIR=output
VISUALIZATION_DIR=output/visualizations
EXPORT_DIR=output/exports

# ============================================================================
# Enhanced Features Configuration
# ============================================================================

# Version Management
VERSION_SNAPSHOT_ENABLED=True
MAX_VERSIONS=50

# Temporal Queries
TEMPORAL_INDEX_ENABLED=True
DEFAULT_TIME_WINDOW_HOURS=24

# Visualization Defaults
DEFAULT_MAX_NODES=200
DEFAULT_LAYOUT=force_directed
DEFAULT_NODE_SIZING=degree

# ============================================================================
# Gradio UI Configuration
# ============================================================================
GRADIO_SERVER_NAME=127.0.0.1
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=False
